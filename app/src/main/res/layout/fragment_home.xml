<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/createGame"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:background="@drawable/round_rectangle_button_2"
        android:shadowColor="#00FDF7F7"
        android:text="New Game"
        android:textColor="#020EF8"
        android:textColorHint="#E61313"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/joinGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487" />

    <Button
        android:id="@+id/joinGame"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/round_rectangle_button_2"
        android:text="Join Game"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/continued"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/continued"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/round_rectangle_button_2"
        android:text="Continue Game"
        android:textIsSelectable="false"
        android:textSize="24sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>